<?xml version="1.0" encoding='iso-8859-1' ?>
<project
	name="Castle.Components.Scheduler.WindsorExtension.Tests"
	default="test"
	xmlns="http://nant.sf.net/release/0.85/nant.xsd"
>

	<property name="common.scripts.dir" value="../../buildscripts/" />
	<include buildfile="${common.scripts.dir}/common-project.xml" />

	<target name="init" depends="common.init">
		<property name="csc.args" value="/nowarn:618" />
		<property name="assembly.is-cls-compliant" value="false" />

		<assemblyfileset id="project.references" basedir="${build.dir}">
			<include name="Castle.Core.dll" />
			<include name="Castle.MicroKernel.dll" />
			<include name="Castle.Components.Scheduler.dll" />
			<include name="Castle.Components.Scheduler.WindsorExtension.dll" />
			<include name="Castle.Components.Scheduler.Tests.dll" />
			<include name="nunit.framework.dll" />
			<include name="Rhino.Mocks.dll" />
			<include name="System.Data.dll" />
			<include name="System.Web.dll" />
		</assemblyfileset>

	</target>

	<target name="test" depends="init common.compile-tests common.run-tests" description="Runs the tests" />

</project>